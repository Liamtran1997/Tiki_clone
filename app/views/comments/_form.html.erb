<%= simple_form_for([@product, @product.comments.build]) do |f| %>
  <div class="mt-3 d-flex flex-row align-items-center p-3 form-color">
      <%= f.input :response,required: false, input_html: { class: 'textarea col-11 ml-2' },
                  wrapper: false, placeholder: 'Enter your comment...', label_html: { class: 'label' },
          label: gravatar_image_tag(current_user.email.gsub('spam', 'mdeering'), alt: current_user.name,gravatar: { size: 50 }) %>
  </div>
  <%= f.button :submit, 'Comment', class: 'btn btn-primary ml-2' %>
<% end %>

